<section class="col-xs-12">

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h2>Welcome {{user.username}}</h2>
    </div>
    <div class="panel-body">
      <h3>
        Your referral link is <a href="{{ referPath }}">{{ referPath }}</a>
      </h3>
    </div>
  </div>

</section>

<section class="col-xs-12">

  <div class="panel panel-success">
    <div class="panel-heading">
      <h2>Ponz Points<sup>TM</sup> ${{user.ponzPoints}}</h2>
    </div>
  </div>

</section>

<section class="col-xs-12">

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h2>Your Ponzverts</h2>
    </div>
    <div class="panel-body">
      {{#if popUser.children }} {{> shared/_children children=popUser.children}} {{else}}
      <h3>You have no ponzverts. SAD!</h3>
      {{/if}}
    </div>
  </div>

</section>
